<a href="#" class="btn preview-description-btn">Preview</a>

<div id="preview-description" class="modal hide fade">
  <div class="modal-header">
    <a href="#" class="close">&times;</a>
    <h3>{{"Product's description"|trans}}</h3>
  </div>
  <div class="modal-body">
          <div class="jk-product"><div class="description">
          <div class="markdown-content">

          </div>
          </div></div>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn primary close">{{'Close'|trans}}</a>
  </div>
</div>

<script type="text/javascript">
$(function(){


    $('a.preview-description-btn').click(function(){
       var conv  = new Markdown.Converter();
        $('#preview-description .markdown-content').html(conv.makeHtml($("#vespolina_product_description").val()));
        $("#preview-description").modal({
                    keyboard: true
                });
        $("#preview-description").modal('show');
        return false;
    });
    $("#preview-description").modal({keyboard: true});

});
</script>